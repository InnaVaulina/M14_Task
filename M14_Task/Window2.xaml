<Window x:Class="M14_Task.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M14_Task"
        mc:Ignorable="d"
        Title="Физическое лицо:" WindowStartupLocation="CenterScreen" Height="400" Width="300" IsVisibleChanged="OnDeactivate">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <StackPanel Margin="5">
                <TextBlock>Физическое лицо:</TextBlock>
                <TextBlock>Фамилия:</TextBlock>
                <TextBox x:Name="newFamilyName"/>
                <TextBlock>Имя:</TextBlock>
                <TextBox x:Name="newFirstName"/>
                <TextBlock>Отчетсво:</TextBlock>
                <TextBox x:Name="newPatronymicName"/>
                <Button Click="Button_Click">Сохранить</Button>
            </StackPanel>


    </Grid>
</Window>
